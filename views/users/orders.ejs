                                          <% var firstProduct = order.products[0]; %>
                                          <figure class="product-media">
                                            <a href="/productView?id=<%= firstProduct.productid._id %>">
                                              <% if (firstProduct.productid.productimage) { %>
                                                <img src="static/uploads/<%= firstProduct.productid.productimage[0] %>" class="product-image" alt="It" width="50px" />
                                              <% } else { %>
