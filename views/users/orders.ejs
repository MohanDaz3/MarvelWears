<script>
    $(document).ready(function() {
    var orderid;

    $("#cancelorder").click(function() {
      console.log('clicked');
      orderid = $(this).data("id");
      $("#cancelReasonModal").modal('show');
    });

	$("#confirmCancellation").click(function() {
    var selectedReason = $("#cancellationReason").val();
    var customReason = $("#customReason").val();

    var cancellationReason = selectedReason;
    if (selectedReason === "custom") {
        cancellationReason = customReason;
    }
	console.log(cancellationReason);

    var data = {
        id: orderid,
        reason: cancellationReason
    };

    Swal.fire({
        title: "Are you sure?",
        text: "This action cannot be undone!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes'
    }).then((result) => {
        if (result.isConfirmed) {
            $.ajax({
                url: "/cancelorder",
                method: "POST",
                data: data,
                success: function(response) {
                    if (response.message == "1") {
                        Swal.fire({
                            title: "Success",
                            text: "Order Cancelled",
                            icon: "success",
                            confirmButtonText: "OK"
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = "/orders"; // Redirect to another page
                            }
                        });
                    } else {
                        Swal.fire({
                            title: "Error",
                            text: "Something went wrong",
                            icon: "error",
                            confirmButtonText: "OK"
                        });
                    }
                },
                error: function(error) {
                    console.error(error);
                    Swal.fire({
                        title: "Error",
                        text: "An error occurred while processing your request",
                        icon: "error",
                        confirmButtonText: "OK"
                    });
                }
            });
        }
    });
});

    $(document).ready(function(){
        $("#returnorder").click(function (){
            console.log('clicked');
            var orderid = $(this).data("id");
            var data = {
                id: orderid,
            };
            Swal.fire({
                title: "Are you sure?",
                text: "This action cannot undone!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result)=>{
                if(result.isConfirmed){
                    $.ajax({
                        url: "/returnorder",
                        method: "POST",
                        data: data,
                        success: function(response) {
                            if(response.message == "1"){
                                Swal.fire({
                                    title: "Success",
                                    text: "Return Requested",
                                    icon: "success",
                                    confirmButtonText: "OK"
                                }).then((result)=>{
                                    if(result.isConfirmed){
                                        window.location.href ="/orders"; // Redirect to another page
                                    }
                                });
                            } else {
                                Swal.fire({
                                    title: "Error",
                                    text: "Cannot return the product after 7 days.",
                                    icon: "error",
                                    confirmButtonText: "OK"
                                });
                            }
                        }
                    });
                }
            });
        });
    });
	});
</script>



