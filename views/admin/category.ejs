<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.all.min.js"></script>



    <script>
      
        
$(document).ready(function() {
  $('.block-button').click(function() {
    var button = $(this);
    var categoryId = button.data('categoryid');
    console.log(categoryId)
    var blockStatus = button.data('blockstatus');
    var url = '';

    if (blockStatus == false) {
      url = '/admin/enablecategory?id=' + categoryId;
    } else {
      url = '/admin/deletecategory?id=' + categoryId;
    }

    // Show SweetAlert confirmation dialog
    Swal.fire({
      title: 'Are you sure?',
      text: 'This action cannot be undone.',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes'
    }).then((result) => {
      if (result.isConfirmed) {
        // Send Ajax request
        $.ajax({
          url: url,
          type: 'POST',
          success: function(response) {
            console.log(response.message);
            // Update the button text and data attributes
            if (blockStatus == false) {
              button.removeClass('btn-info').addClass('btn-danger').text('Unlist');
              button.data('blockstatus', true);
            } else {
              button.removeClass('btn-danger').addClass('btn-info').text('List');
              button.data('blockstatus', false);
            }
            // Show success message
            Swal.fire({
              title: 'Success',
              text: 'category has been ' + (blockStatus == false ? 'Listed' : 'Unlisted') + '.',
              icon: 'success',
              timer: 2000,
              showConfirmButton: false
            });
          },
          error: function(error) {
            console.log('Error: ' + error);
          }
        });
      }
    });
  });
});



    </script>

