<script>
    $(document).ready(function () {
        $("#statusupdate").on("click", function () {
      console.log("clicked");
      var orderid = $(this).data("id");
      var status = $(".status:checked").text().trim();
      var data = {
        orderid: orderid,
        status: status,
      };
      console.log(status);
      if (status != "Change status") {
        $.ajax({
          url: "/admin/statusupdate",
          method: "post",
          data: data,
          success: function (response) {
            if (response.message == "1") {
              Swal.fire({
                title: "Success",
                text: "Status updated",
                icon: "success",
                confirmButtonText: "OK",
              }).then((result) => {
                if (result.isConfirmed) {
                  window.location.href = "/admin/orders"; // Redirect to another page
                }
              });
            } else {
              Swal.fire({
                title: "Error",
                text: "Something went worng",
                icon: "error",
                confirmButtonText: "OK",
              });
            }
          },
        });
      } else {
        Swal.fire({
          title: "Warning",
          text: "Please select valid option",
          icon: "warning",
          confirmButtonText: "OK",
        });
      }
    });

    $("#returnapprove").on("click", function () {
      console.log("clicked");
      var orderid = $(this).data("id");
      var data = {
        id: orderid,
      };
      Swal.fire({
        title: "Are you sure?",
        text: "This action cannot undone!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes",
      }).then((result) => {
        if (result.isConfirmed) {
            $.ajax({
                url: "/admin/returnapprove",
                method: "post",
                data: data,
                success: function (response) {
                    if (response.message == "1") {
                        Swal.fire({
                            title: "Success",
                            text: "Return Approved",
                            icon: "success",
                            confirmButtonText: "OK",
                        }).then((result) => {
                            if (result.isConfirmed) {
                            window.location.href = "/admin/orders"; // Redirect to another page
                            }
                        });
                    } else {
                        Swal.fire({
                            title: "Error",
                            text: "Something went worng",
                            icon: "error",
                            confirmButtonText: "OK",
                        });
                    }
                },
            });
        }
      });        
    });
});
</script>

